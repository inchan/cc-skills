{
    "version": "1.0",
    "description": "Skill activation triggers for workflow-automation plugin",
    "skills": {
        "agent-workflow-manager": {
            "type": "domain",
            "enforcement": "suggest",
            "priority": "critical",
            "description": "Agent Skills 통합 워크플로우를 자동으로 관리하고 조율",
            "promptTriggers": {
                "keywords": [
                    "워크플로우",
                    "workflow",
                    "자동화",
                    "automation",
                    "전체 프로세스",
                    "통합 작업",
                    "에이전트 체인",
                    "agent chain"
                ],
                "intentPatterns": [
                    "(전체|통합|자동).*?(워크플로우|프로세스)",
                    "workflow.*?(manage|start|execute|run)",
                    "(자동|auto).*?(처리|실행|workflow)"
                ]
            }
        },
        "agent-workflow-advisor": {
            "type": "domain",
            "enforcement": "suggest",
            "priority": "critical",
            "description": "작업에 최적인 에이전트 패턴 추천",
            "promptTriggers": {
                "keywords": [
                    "어떤 패턴",
                    "패턴 추천",
                    "which pattern",
                    "recommend pattern",
                    "워크플로우 선택",
                    "workflow choice",
                    "워크플로우 추천",
                    "패턴 선택",
                    "어떤 워크플로우"
                ],
                "intentPatterns": [
                    "(어떤|which).*?(패턴|pattern|스킬|skill|워크플로우|workflow)",
                    "(추천|recommend|suggest).*?(패턴|pattern|워크플로우|workflow)",
                    "(선택|choose|select).*?(워크플로우|workflow|패턴|pattern)",
                    "워크플로우.*?추천"
                ]
            }
        },
        "intelligent-task-router": {
            "type": "domain",
            "enforcement": "suggest",
            "priority": "high",
            "description": "작업 분류 및 최적 처리 경로 라우팅",
            "promptTriggers": {
                "keywords": [
                    "라우팅",
                    "분류",
                    "routing",
                    "classify",
                    "route",
                    "작업 분류",
                    "task classification"
                ],
                "intentPatterns": [
                    "(분류|classify|route).*?(작업|task|요청|request)",
                    "(라우팅|routing).*?(설정|setup|구성|config)",
                    "(어떤|which).*?(경로|path|라우팅|routing)"
                ]
            }
        },
        "parallel-task-executor": {
            "type": "domain",
            "enforcement": "suggest",
            "priority": "high",
            "description": "병렬 작업 실행 및 결과 집계",
            "promptTriggers": {
                "keywords": [
                    "병렬",
                    "동시",
                    "parallel",
                    "concurrent",
                    "sectioning",
                    "voting",
                    "멀티태스킹",
                    "multitasking"
                ],
                "intentPatterns": [
                    "(병렬|parallel|동시).*?(실행|처리|작업|execution)",
                    "(sectioning|voting).*?mode",
                    "(여러|multiple).*?(동시|concurrent|parallel)"
                ]
            }
        },
        "dynamic-task-orchestrator": {
            "type": "domain",
            "enforcement": "suggest",
            "priority": "high",
            "description": "복잡한 프로젝트의 동적 분해 및 워커 조율",
            "promptTriggers": {
                "keywords": [
                    "복잡한",
                    "대규모",
                    "orchestrate",
                    "complex project",
                    "전체 스택",
                    "full stack",
                    "멀티 에이전트",
                    "multi agent"
                ],
                "intentPatterns": [
                    "(복잡한|complex).*?(프로젝트|시스템|작업|project)",
                    "(전체|full).*?(스택|stack)",
                    "(대규모|large).*?(프로젝트|작업|project)",
                    "orchestrat.*?(task|worker|agent)"
                ]
            }
        },
        "sequential-task-processor": {
            "type": "domain",
            "enforcement": "suggest",
            "priority": "high",
            "description": "순차 작업 처리 및 검증 게이트 관리",
            "promptTriggers": {
                "keywords": [
                    "순차",
                    "단계별",
                    "sequential",
                    "step by step",
                    "prompt chaining",
                    "단계적",
                    "체인"
                ],
                "intentPatterns": [
                    "(순차|sequential|단계별|step).*?(처리|실행|작업)",
                    "(gate|검증|validation).*?between",
                    "(체인|chain).*?(작업|task|프롬프트|prompt)"
                ]
            }
        }
    },
    "notes": {
        "enforcement_types": {
            "suggest": "Skill suggestion appears but doesn't block execution",
            "block": "Requires skill to be used before proceeding (guardrail)",
            "warn": "Shows warning but allows proceeding"
        },
        "priority_levels": {
            "critical": "Highest - Always trigger when matched",
            "high": "Important - Trigger for most matches",
            "medium": "Moderate - Trigger for clear matches",
            "low": "Optional - Trigger only for explicit matches"
        },
        "customization": {
            "pathPatterns": "Adjust to match your project structure (blog-api, auth-service, etc.)",
            "keywords": "Add domain-specific terms relevant to your project",
            "intentPatterns": "Use regex for flexible user intent matching"
        }
    }
}
