{
    "version": "1.0",
    "description": "Skill activation triggers for tool-creators plugin",
    "skills": {
        "skill-developer": {
            "type": "domain",
            "enforcement": "suggest",
            "priority": "high",
            "description": "Meta-skill for creating and managing Claude Code skills",
            "promptTriggers": {
                "keywords": [
                    "skill system",
                    "create skill",
                    "add skill",
                    "skill triggers",
                    "skill rules",
                    "hook system",
                    "skill development",
                    "skill-rules.json",
                    "스킬",
                    "스킬 생성",
                    "스킬 만들"
                ],
                "intentPatterns": [
                    "(how do|how does|explain).*?skill",
                    "(create|add|modify|build).*?skill",
                    "skill.*?(work|trigger|activate|system)",
                    "스킬.*?(만들|생성|추가)"
                ]
            }
        },
        "skill-generator-tool": {
            "type": "domain",
            "enforcement": "suggest",
            "priority": "critical",
            "description": "Unified tool generator that recommends and routes to the optimal Claude Code tool type (Command, Skill, Subagent, Hook)",
            "promptTriggers": {
                "keywords": [
                    "create tool",
                    "generate tool",
                    "make tool",
                    "tool type",
                    "which tool",
                    "automate",
                    "automation",
                    "extend capabilities",
                    "create command",
                    "create skill",
                    "create subagent",
                    "create hook",
                    "create agent",
                    "tool generator",
                    "tool creator",
                    "도구 생성",
                    "자동화",
                    "what should I use",
                    "how do I automate"
                ],
                "intentPatterns": [
                    "(create|make|build|generate).*?(tool|command|skill|subagent|hook|agent)",
                    "(which|what).*?(tool|type).*?(should|use|best)",
                    "(automate|automation).*?(create|build|make)",
                    "(extend|add).*?(capabilities|functionality)",
                    "(unsure|not sure|don't know).*?(tool|type|which)",
                    "how.*?(automate|create).*?(workflow|process)",
                    "(recommend|suggest).*?(tool|type)"
                ]
            }
        },
        "command-creator": {
            "type": "domain",
            "enforcement": "suggest",
            "priority": "high",
            "description": "슬래시 커맨드 생성 및 관리",
            "promptTriggers": {
                "keywords": [
                    "command",
                    "slash command",
                    "커맨드",
                    "슬래시 커맨드",
                    "명령어"
                ],
                "intentPatterns": [
                    "(create|make|add).*?(command|커맨드|명령어)",
                    "(슬래시|slash).*?(커맨드|command)"
                ]
            }
        },
        "hooks-creator": {
            "type": "domain",
            "enforcement": "suggest",
            "priority": "high",
            "description": "훅 생성 및 이벤트 자동화",
            "promptTriggers": {
                "keywords": [
                    "hook",
                    "훅",
                    "event hook",
                    "이벤트 훅",
                    "자동화 훅"
                ],
                "intentPatterns": [
                    "(create|make|add).*?(hook|훅)",
                    "(event|이벤트).*?(hook|훅|자동화)"
                ]
            }
        },
        "subagent-creator": {
            "type": "domain",
            "enforcement": "suggest",
            "priority": "high",
            "description": "서브에이전트 생성 및 관리",
            "promptTriggers": {
                "keywords": [
                    "subagent",
                    "agent",
                    "서브에이전트",
                    "에이전트"
                ],
                "intentPatterns": [
                    "(create|make|add).*?(subagent|agent|에이전트)",
                    "(서브|sub).*?(에이전트|agent)"
                ]
            }
        },
        "skill-health-checker": {
            "type": "tool",
            "enforcement": "suggest",
            "priority": "medium",
            "description": "스킬 건강도 진단 및 유지보수 가이드. 500줄 규칙, skill-rules.json 동기화, YAML 검증을 수행합니다.",
            "promptTriggers": {
                "keywords": [
                    "스킬 진단",
                    "스킬 체크",
                    "skill health",
                    "skill check",
                    "500줄",
                    "스킬 검증",
                    "skill-rules 검증",
                    "스킬 상태",
                    "skill quality"
                ],
                "intentPatterns": [
                    "(check|validate|diagnose).*?(skill|스킬)",
                    "(skill|스킬).*(health|quality|validation|검증|진단|체크)",
                    "500.*(line|줄|rule|규칙)",
                    "(스킬|skill).*(상태|건강|품질)"
                ]
            }
        }
    },
    "notes": {
        "enforcement_types": {
            "suggest": "Skill suggestion appears but doesn't block execution",
            "block": "Requires skill to be used before proceeding (guardrail)",
            "warn": "Shows warning but allows proceeding"
        },
        "priority_levels": {
            "critical": "Highest - Always trigger when matched",
            "high": "Important - Trigger for most matches",
            "medium": "Moderate - Trigger for clear matches",
            "low": "Optional - Trigger only for explicit matches"
        },
        "customization": {
            "pathPatterns": "Adjust to match your project structure (blog-api, auth-service, etc.)",
            "keywords": "Add domain-specific terms relevant to your project",
            "intentPatterns": "Use regex for flexible user intent matching"
        }
    }
}
