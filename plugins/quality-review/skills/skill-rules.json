{
    "version": "1.0",
    "description": "Skill activation triggers for quality-review plugin",
    "skills": {
        "iterative-quality-enhancer": {
            "type": "domain",
            "enforcement": "suggest",
            "priority": "high",
            "description": "품질 평가 및 반복 개선 루프",
            "promptTriggers": {
                "keywords": [
                    "품질",
                    "최적화",
                    "개선",
                    "quality",
                    "optimize",
                    "enhance",
                    "evaluate",
                    "리팩토링",
                    "refactor"
                ],
                "intentPatterns": [
                    "(품질|quality).*?(평가|검증|improve|enhance)",
                    "(최적화|optimize|개선|enhance).*?(반복|iterate|코드|code)",
                    "(리팩토링|refactor).*?(코드|code|품질|quality)",
                    "(평가|evaluate).*?(품질|quality|성능|performance)"
                ]
            }
        },
        "reflection-review": {
            "type": "domain",
            "enforcement": "suggest",
            "priority": "high",
            "description": "Claude Code 결과를 6개 영역에서 평가하고 성찰 기반 리뷰 생성",
            "promptTriggers": {
                "keywords": [
                    "피드백",
                    "feedback",
                    "평가",
                    "evaluate",
                    "결과 분석",
                    "result analysis",
                    "리뷰",
                    "review",
                    "점수",
                    "score",
                    "품질 평가",
                    "quality assessment",
                    "코드 평가",
                    "code evaluation",
                    "구현 평가",
                    "implementation review",
                    "테스트 평가",
                    "test evaluation",
                    "자기비판",
                    "self-critique",
                    "성찰",
                    "reflection"
                ],
                "intentPatterns": [
                    "(피드백|feedback).*?(생성|제공|분석|generate)",
                    "(평가|evaluate|assess).*?(결과|result|코드|code)",
                    "(리뷰|review).*?(결과|코드|구현|implementation)",
                    "(분석|analyze).*?(결과|품질|quality)",
                    "(점수|score).*?(평가|매기|calculate)",
                    "(자기비판|성찰|critique|reflect)"
                ]
            },
            "fileTriggers": {
                "pathPatterns": [
                    "**/*.ts",
                    "**/*.tsx",
                    "**/*.js",
                    "**/*.jsx",
                    "**/*.py"
                ],
                "pathExclusions": [
                    "**/node_modules/**",
                    "**/dist/**",
                    "**/build/**"
                ]
            }
        }
    },
    "notes": {
        "enforcement_types": {
            "suggest": "Skill suggestion appears but doesn't block execution",
            "block": "Requires skill to be used before proceeding (guardrail)",
            "warn": "Shows warning but allows proceeding"
        },
        "priority_levels": {
            "critical": "Highest - Always trigger when matched",
            "high": "Important - Trigger for most matches",
            "medium": "Moderate - Trigger for clear matches",
            "low": "Optional - Trigger only for explicit matches"
        },
        "customization": {
            "pathPatterns": "Adjust to match your project structure (blog-api, auth-service, etc.)",
            "keywords": "Add domain-specific terms relevant to your project",
            "intentPatterns": "Use regex for flexible user intent matching"
        }
    }
}
