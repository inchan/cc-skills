{
    "version": "1.0",
    "description": "Skill activation triggers for prompt-enhancement plugin",
    "skills": {
        "meta-prompt-generator": {
            "type": "domain",
            "enforcement": "suggest",
            "priority": "high",
            "description": "슬래시 커맨드용 프롬프트 생성 (간결하고 실용적인 접근)",
            "promptTriggers": {
                "keywords": [
                    "프롬프트 생성",
                    "메타 프롬프트",
                    "슬래시 커맨드",
                    "커스텀 프롬프트",
                    "커맨드 생성",
                    "프롬프트 작성",
                    "프롬프트",
                    "prompt",
                    "command"
                ],
                "intentPatterns": [
                    "(create|generate|make|build).*?(prompt|command|slash)",
                    "(슬래시|slash).*?(커맨드|command).*?(생성|만들)",
                    "프롬프트.*?(만들|생성|작성)",
                    "(커맨드|command).*?(생성|만들|create)"
                ]
            }
        },
        "prompt-enhancer": {
            "type": "domain",
            "enforcement": "suggest",
            "priority": "high",
            "description": "Enhance brief development requests by analyzing project context to generate detailed, contextually-aware requirements",
            "promptTriggers": {
                "keywords": [
                    "요구사항",
                    "requirements",
                    "프로젝트 컨텍스트",
                    "project context",
                    "상세화",
                    "명확하게",
                    "구체화",
                    "요청 분석",
                    "request analysis",
                    "컨텍스트 분석",
                    "context analysis",
                    "개발 요청",
                    "development request",
                    "기능 명세",
                    "specification"
                ],
                "intentPatterns": [
                    "(상세|구체|명확).*?요구사항",
                    "(analyze|enhance|improve).*?(request|requirement)",
                    "프로젝트.*?컨텍스트.*?(분석|기반)",
                    "context.*?aware.*?requirement",
                    "(간단한|짧은|brief).*?(요청|request).*?(상세|구체|detailed)",
                    "기능.*?(구현|개발).*?요구사항"
                ]
            },
            "fileTriggers": {
                "pathPatterns": [
                    "**/requirements/**/*.md",
                    "**/specs/**/*.md",
                    "**/REQUIREMENTS.md",
                    "**/PROJECT.md"
                ],
                "contentPatterns": [
                    "## Requirements",
                    "## 요구사항",
                    "## Specification"
                ]
            }
        }
    },
    "notes": {
        "enforcement_types": {
            "suggest": "Skill suggestion appears but doesn't block execution",
            "block": "Requires skill to be used before proceeding (guardrail)",
            "warn": "Shows warning but allows proceeding"
        },
        "priority_levels": {
            "critical": "Highest - Always trigger when matched",
            "high": "Important - Trigger for most matches",
            "medium": "Moderate - Trigger for clear matches",
            "low": "Optional - Trigger only for explicit matches"
        },
        "customization": {
            "pathPatterns": "Adjust to match your project structure (blog-api, auth-service, etc.)",
            "keywords": "Add domain-specific terms relevant to your project",
            "intentPatterns": "Use regex for flexible user intent matching"
        }
    }
}
